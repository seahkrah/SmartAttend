# SmartAttend Environment Configuration Template
# Copy this file to .env and fill in actual values for your environment
# NEVER commit .env files to git - they contain secrets

# ============================================
# Environment Selection
# ============================================
# Must be one of: development, staging, production
NODE_ENV=development

# ============================================
# Backend Configuration
# ============================================

# API Server Port
BACKEND_PORT=3000

# Database Connection (environment-specific URLs)
DATABASE_URL=postgresql://user:password@localhost:5432/smartattend_dev

# JWT Secrets (never share between environments)
JWT_SECRET=your-development-secret-key-change-in-each-environment

# Session Configuration
SESSION_TIMEOUT_MS=3600000

# ============================================
# Frontend Configuration
# ============================================

# Frontend Port
FRONTEND_PORT=5173

# Backend API Base URL (environment-specific)
VITE_API_BASE_URL=http://localhost:3000/api

# ============================================
# Security: Multi-Factor Authentication
# ============================================

# MFA provider (optional: twilio, sendgrid, aws-sns)
MFA_PROVIDER=

# MFA provider credentials (empty if MFA_PROVIDER not set)
MFA_ACCOUNT_SID=
MFA_AUTH_TOKEN=
MFA_SENDER_PHONE=

# ============================================
# Security: Superadmin Features
# ============================================

# Superadmin MFA enforcement
SUPERADMIN_MFA_ENABLED=true

# IP allowlist enforcement
SUPERADMIN_IP_ALLOWLIST_ENABLED=false

# Rate limiting (requests per window)
RATE_LIMIT_REQUESTS=5
RATE_LIMIT_WINDOW_MS=60000

# ============================================
# Logging
# ============================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Log to file (development only)
LOG_TO_FILE=false
